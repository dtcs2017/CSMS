<Window x:Class="ContractStatementManagementSystem.InsertService"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InsertService" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <TextBlock Margin="5" Text="服务款项："/>
                <TextBox Name="tb_Service" Margin="5" Width="170" Height="23" Text="{Binding Path=Project}"/>
            </StackPanel>
            <Button Name="btn_Save" Content="保存" Width="75" Margin="0,20,0,0" Click="btn_Save_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
